mixin navbar-items(text, link)
  li
    a.navbar-link(href=link)= text

mixin navbar(navbarItems)
  nav.navbar
    .mobile-nav-display
      a.brand-logo(href="/") DeluxThreads
      button.navbar-toggle
        i.fas.fa-bars
    ul.navbar-submenu
      each value, key in navbarItems
        +navbar-items(key, value)
