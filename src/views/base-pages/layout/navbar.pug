mixin navbar-items(text, link)
  li
    a.navbar-link(href=link)= text

nav.navbar
  .mobile-nav-display
    a.brand-logo(href="!#") DeluxThreads
    button.navbar-toggle
      i.fas.fa-bars
  ul.navbar-submenu
    +navbar-items('Portfolio', '!#')
    +navbar-items('About', '!#')
    +navbar-items('Services', '!#')
    +navbar-items('Testimonials', '!#')
    +navbar-items('Contact', '!#')
