//- Generates navlinks (li + a) with icons in the text
//- @param {String} text - text for the link
//- @param {String} url - URL that the link points to
mixin nav-items-icons(url, iconClasses)
  li
    a.nav-link(href=url) #[i(class=iconClasses)]

mixin social-media-nav(navItems)
  nav.social-media-nav
    ul
      each item in navItems
        +nav-items-icons(item.url, item.icon)
